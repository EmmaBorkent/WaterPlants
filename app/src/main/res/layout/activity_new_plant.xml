<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewPlantActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/new_plant_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/new_plant_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_margin="@dimen/margin_basic"
            android:text="@string/new_plant_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/new_plant_name_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/new_plant_name_hint"
            android:inputType="text"
            android:layout_marginEnd="@dimen/margin_basic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/new_plant_species_edit"
            app:layout_constraintTop_toTopOf="@+id/new_plant_name_text"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/new_plant_species_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_basic"
            android:text="@string/new_plant_species"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_plant_name_text"
            app:layout_constraintEnd_toStartOf="@id/new_plant_species_edit"
            app:layout_constraintHorizontal_bias="0.5"/>

        <EditText
            android:id="@+id/new_plant_species_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/new_plant_species_hint"
            app:layout_constraintStart_toEndOf="@id/new_plant_species_text"
            app:layout_constraintTop_toTopOf="@id/new_plant_species_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_basic"
            android:layout_marginStart="@dimen/margin_basic"
            app:layout_constraintHorizontal_bias="0.5"
            tools:ignore="Autofill"
            />

        <ImageView
            android:id="@+id/new_plant_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_basic"
            android:contentDescription="@string/plant_image_description"
            android:src="@drawable/strelizia"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_plant_species_text"/>

        <Button
            android:id="@+id/new_plant_choose_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_basic"
            android:text="@string/new_plant_choose_image"
            app:layout_constraintEnd_toEndOf="@id/new_plant_image"
            app:layout_constraintStart_toStartOf="@id/new_plant_image"
            app:layout_constraintBottom_toTopOf="@id/new_plant_date_text"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@id/new_plant_image"
            android:onClick="pickImage"/>

        <TextView
            android:id="@+id/new_plant_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_basic"
            android:text="@string/new_plant_end_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/new_plant_repeat_text"/>

        <EditText
            android:id="@+id/new_plant_date_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@id/new_plant_date_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/new_plant_date_text"
            android:layout_marginEnd="@dimen/margin_basic"
            android:layout_marginStart="@dimen/margin_basic"
            android:hint="@string/new_plant_end_date_hint"
            tools:ignore="Autofill"
            />

        <TextView
            android:id="@+id/new_plant_repeat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_margin="@dimen/margin_basic"
            android:text="@string/new_plant_repeat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/new_plant_repeat_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="@id/new_plant_date_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/new_plant_repeat_text"
            android:hint="@string/new_plant_repeat_hint"
            android:layout_marginEnd="@dimen/margin_basic"
            tools:ignore="Autofill"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>