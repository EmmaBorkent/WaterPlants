<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPlantActivity">

    <TextView
        android:id="@+id/new_plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/new_plant_name"
        android:layout_margin="@dimen/margin_basic"
        />

    <TextView
        android:id="@+id/new_plant_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_plant_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/new_plant_species"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/new_plant_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/plant_image_description"
        android:src="@drawable/strelizia"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_plant_species"
        android:layout_margin="@dimen/margin_basic"
        />

    <Button
        android:id="@+id/new_plant_choose_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_plant_choose_image"
        app:layout_constraintTop_toBottomOf="@id/new_plant_image"
        app:layout_constraintStart_toStartOf="@id/new_plant_image"
        app:layout_constraintEnd_toEndOf="@id/new_plant_image"
        android:layout_marginTop="@dimen/margin_small"/>

    <TextView
        android:id="@+id/new_plant_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_plant_end_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_plant_choose_image_button"
        android:layout_margin="@dimen/margin_basic"
        />

    <TextView
        android:id="@+id/new_plant_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basic"
        android:text="@string/new_plant_repeat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_plant_end_date"
        app:layout_constraintVertical_bias="0.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>