<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_small">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/card_corner"
        app:cardElevation="@dimen/elevation"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_small">

        <ImageView
            android:id="@+id/rv_all_plants_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/strelizia"
            android:contentDescription="@string/plant_image_description"
            />

        <TextView
            android:id="@+id/rv_all_plants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rv_water_plants_name"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_basic"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>